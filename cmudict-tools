from __future__ import print_function

import cmudict
import sys
import argparse

def parse(args):
	return cmudict.parse(args.filename, check_trailing_whitespace=args.check_trailing_whitespace, check_missing_stress_marks=args.check_missing_stress_marks)

def print_dict(args):
	cmudict.format(args.format, parse(args))

def debug(args):
	for entry in parse(args):
		print(entry)

def validate(args):
	for word, context, phonemes, comment, error in parse(args):
		if error:
			print(error, file=sys.stderr)

commands = {
	'debug':    debug,
	'validate': validate,
	'print':    print_dict,
}

parser = argparse.ArgumentParser(description='A helper program for working with the CMU Pronunciation Dictionary.')
parser.add_argument('--check-trailing-whitespace', action='store_true')
parser.add_argument('--check-missing-stress-marks', action='store_true')
parser.add_argument('--format', default='cmudict', choices=cmudict.dict_formats.keys())
parser.add_argument('command', choices=commands.keys())
parser.add_argument('filename')
args = parser.parse_args()

commands[args.command](args)
